<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presantation.NearEarthAsteroidInformationFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/asteroid"
        android:tint="#80000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="24dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:fontFamily="@font/alatsi"
            android:text="2008 QV11"
            android:textAllCaps="true"
            android:textColor="@color/blizzard"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/asteroidClass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:clickable="false"
            android:fontFamily="@font/alatsi"
            android:text="Class: Aten [NEO]"
            android:textAllCaps="true"
            android:textColor="@color/blizzard"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/solutionDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:clickable="false"
            android:fontFamily="@font/alatsi"
            android:text="Solution date: 2021-Aug-21 05:48:55"
            android:textAllCaps="true"
            android:textColor="@color/blizzard"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dataArcSpan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:clickable="false"
            android:fontFamily="@font/alatsi"
            android:text="Data-arc span: 4739 days"
            android:textAllCaps="true"
            android:textColor="@color/blizzard"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/planetaryEphem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:clickable="false"
            android:fontFamily="@font/alatsi"
            android:text="Planetary ephem: DE441"
            android:textAllCaps="true"
            android:textColor="@color/blizzard"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sbPertEphem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:clickable="false"
            android:fontFamily="@font/alatsi"
            android:text="SB-pert. ephem: SB441-N16"
            android:textAllCaps="true"
            android:textColor="@color/blizzard"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/conditionCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:clickable="false"
            android:fontFamily="@font/alatsi"
            android:text="Condition code: 0"
            android:textAllCaps="true"
            android:textColor="@color/blizzard"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>